<div class="container">
  <div class="row">
    <div class="col-md-3 text-center">
      <%= image_tag @user.profile.avatar.url, class: "avatar-show-img" %>
    </div>
    
    <div class="col-md-6">
      <h1 class="bold"><%= @user.profile.first_name %> <%= @user.profile.last_name %> </h1>
      <h3><span class="job-title-icon"><%= job_title_icon %></span><%= @user.profile.job_title %> </h3>
      <% if current_user.plan_id == 2 %>
        <div class="well profile-bloc profile-contact">
          <h3>Contact Info</h3>
          <%= @user.profile.contact_email %> </br>
          <%= @user.profile.phone_number %> </br>
        </div>
      <% end %>
      
      <div class="well profile-bloc profile-info">
        <h3>Description</h3>
        <%= @user.profile.description %>
      </div>
    </div>
  </div>
  
</div>